<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">
	<title><%= title %></title>
</head>

<body>
	<div class="container">
		<!-- Navbar -->
		<%- include('includes/navbar'); %>
		
		<!-- Card: Header and Footer -->
		<div class="card mt-3">
			<div class="card-header"><%= title %></div>
			<div class="card-body table-responsive">
				
				<% if(successMsg) { %>
					<div class="alert alert-info alert-dismissible fade show" role="alert">
						<%= successMsg %>
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
					</div>
				<% } %>
				<table class="table table-bordered table-hover table-sm mb-0">
					<thead>
						<tr>
							<th width="5%">#</th>
							<th width="15%">Tên sản phẩm</th>
							<th width="10%">Ảnh</th>
							<th width="5%">Đơn giá</th>
							<th width="5%">Số lượng</th>
							<th width="10%">Tổng tiền</th>
							<th width="15%">Mô tả</th>
							<th width="15%">Tình trạng</th>
						</tr>
					</thead>
					<tbody>
						<% var stt = 1; %>
						<% lichsu.forEach(function(ls){ %>
							<tr>
								<td class="align-middle"><%= stt++ %></td>
								<td class="align-middle small"><%= ls.TenDT %></td>
								<td class="text-center"><img src="http://localhost:3000/<%=ls.Anh %>" width="100" height="100"></td>
								<td class="align-middle small"><%= ls.GiaBan %> triệu</td>
								<td class="align-middle small"><%= ls.SoLuong %> cái</td>
								<td class="align-middle small"><%= ls.TongTien %> triệu</td>
								<td class="align-middle small"><%= ls.MoTa %> </td>
								<td class="align-middle small"><%= ls.TinhTrang %> </td>
							</tr>
						<% }); %>
					</tbody>
				</table>
			</div>
			<div>
			</div>
		</div>
		<a href="/" class="btn btn-primary mb-2"><i class="bi bi-backspace-fill"></i> Trở về trang chủ</a>
		<!-- Footer -->
		<%- include('includes/footer'); %>
	</div>
	
	<%- include('includes/javascript'); %>
</body>

</html>