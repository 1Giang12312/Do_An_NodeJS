<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">
	<title><%= title %></title>
</head>

<body>
	<div class="container">
		<!-- Navbar -->
		<%- include('includes/navbar'); %>
		
		<!-- Card: Header and Footer -->
		<div class="card mt-3">
			<div class="card-header"><%= title %></div>
			<div class="card-body">
				<% if(typeof errors != 'undefined') { %>
					<div class="alert alert-danger alert-dismissible fade show" role="alert">
						<ul class="mb-0">
							<% errors.forEach(function(err){ %>
								<li><%= err.msg %></li>	
							<% }); %>
						</ul>
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
					</div>
				<% } %>
				<form action="/dienthoai/them" method="post"  enctype="multipart/form-data" class="needs-validation" novalidate>
					<div class="mb-3">
						<label for="MaHSX" class="form-label">Hãng sản xuất:</label>
						<select class="form-select" id="MaHSX" name="MaHSX" required>
							<option value="">-- Chọn --</option>
							<% hsx.forEach(function(h) { %>
								<option value="<%= h.MaHSX %>"><%= h.TenHSX %></option>
							<% }); %>
						</select>
					</div>
					<div class="mb-3">
						<label for="TenDT" class="form-label">Tên sản phẩm:</label>
						<textarea class="form-control" id="TenDT" name="TenDT" required></textarea>
					</div>
					<div class="mb-3">
						<label for="SoLuong" class="form-label">Số lượng:</label>
						<textarea class="form-control" id="SoLuong" name="SoLuong" required></textarea>
					</div>
					<div class="mb-3">
						<label for="GiaBan" class="form-label">Giá bán:</label>
						<textarea class="form-control" id="GiaBan" name="GiaBan" required></textarea>
					</div>
					<div class="mb-3">
						<label for="Anh" class="form-label">Hình ảnh:</label>
						<input type="file" class="form-control" id="Anh" name="Anh">
					</div>
					<div class="mb-3">
						<label for="TinhTrang" class="form-label">Tình trạng:</label>
						<textarea class="form-control" id="TinhTrang" name="TinhTrang" required></textarea>
					</div>
					<div class="mb-3">
						<label for="MoTa" class="form-label">Mô tả chi tiết:</label>
						<textarea class="form-control" id="MoTa" name="MoTa" required></textarea>
					</div>
					<button type="submit" class="btn btn-primary">Đăng bán</button>
				</form>
			</div>
		</div>
		
		<!-- Footer -->
		<%- include('includes/footer'); %>
	</div>
	
	<%- include('includes/javascript'); %>
	<script src="https://cdn.ckeditor.com/4.18.0/full/ckeditor.js"></script>
	<script>
		CKEDITOR.replace('NoiDung', {
			customConfig: 'http://127.0.0.1:3000/js/config.js'
		});
	</script>
</body>

</html>