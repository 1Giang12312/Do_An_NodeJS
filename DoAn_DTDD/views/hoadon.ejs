<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">
	<title><%= title %></title>
</head>

<body>
	<div class="container">
		<!-- Navbar -->
		<%- include('includes/navbar'); %>
		
		<!-- Card: Header and Footer -->
		<div class="card mt-3">
			<div class="card-header"><%= title %></div>
			<div class="card-body table-responsive">
				<% if(successMsg) { %>
					<div class="alert alert-info alert-dismissible fade show" role="alert">
						<%= successMsg %>
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
					</div>
				<% } %>
				<table class="table table-bordered table-hover table-sm mb-0">
					<thead>
						<tr>
							<th width="5%">#</th>
							<th width="15%">Tên khách hàng</th>
							<th width="15%">Số điện thoại</th>
							<th width="15%">Email</th>
							<th width="15%">Địa chỉ</th>
							<th width="10%">Ngày mua</th>
							<th width="15%">Thành tiền</th>
							<th width="5%">Duyệt</th>
							<th width="15%">Chi tiết</th>
							<th width="5%">Xóa</th>
						</tr>
					</thead>
					<tbody>
						<% var stt = 1; %>
						<% hoadon.forEach(function(hd){ %>
							<tr>
								<td class="align-middle"><%= stt++ %></td>
								<td class="align-middle small"><%= hd.HoVaTen %></td>
								<td class="align-middle small"><%= hd.SoDienThoai %></td>
								<td class="align-middle small"><%= hd.Email %></td>
								<td class="align-middle small"><%= hd.DiaChi %></td>
								<td class="align-middle small"><%= new Date(hd.NgayBan.toISOString()).toLocaleString('vi-VN') %></td>
								<td class="align-middle small"><%= hd.ThanhTien %> triệu</td>
								<td class="align-middle text-center">
									<% if(hd.Duyet == 1) { %>
										<a href="/hoadon/duyet/<%= hd.MaHD %>"><i class="bi bi-x-circle text-danger"></i></a>
									<% } else { %>
										<a href="/hoadon/duyet/<%= hd.MaHD %>"><i class="bi bi-check-circle"></i></a>
									<% } %>
								</td>
								<td class="align-middle text-center"><a href="/hoadon/chitiet/<%= hd.MaHD %>">Chi tiết hóa đơn<i class="bi bi-pencil-square"></i></a></td>
								<td class="align-middle text-center"><a href="/hoadon/xoa/<%= hd.MaHD %>" onclick="return confirm('Bạn có muốn xóa hóa đơn của <%= hd.HoVaTen %> không?');"><i class="bi bi-trash text-danger"></i></a></td>
							</tr>
						<% }); %>
					</tbody>
				</table>
			</div>
		</div>
		
		<!-- Footer -->
		<%- include('includes/footer'); %>
	</div>
	
	<%- include('includes/javascript'); %>
</body>

</html>