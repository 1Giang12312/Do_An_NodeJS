<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">
	<title><%= title %></title>
</head>

<body>
	<div class="container">
		<!-- Navbar -->
		<%- include('includes/navbar'); %>
		
		<!-- Card: Header and Footer -->
		<div class="card mt-3">
			<div class="card-header"><%= title %></div>
			<div class="card-body table-responsive">
				
				<% if(successMsg) { %>
					<div class="alert alert-info alert-dismissible fade show" role="alert">
						<%= successMsg %>
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
					</div>
				<% } %>
				<table class="table table-bordered table-hover table-sm mb-0">
					<thead>
						<tr>
							<th width="5%">#</th>
							<th width="15%">Tên sản phẩm</th>
							<th width="15%">Ảnh</th>
							<th width="15%">Giá bán</th>
							<th width="15%">Số lượng</th>
							<th width="15%">Tổng tiền</th>
							<th width="15%">Sửa</th>
							<th width="15%">Xóa</th>
						</tr>
					</thead>
					<tbody>
						<% var stt = 1; %>
						<% giohang.forEach(function(gh){ %>
							<tr>
								<td class="align-middle"><%= stt++ %></td>
								<td class="align-middle small"><%= gh.TenDT %></td>
								<td class="text-center"><img src="http://localhost:3000/<%=gh.Anh %>" width="100" height="100"></td>
								<td class="align-middle small"><%= gh.GiaBan %> triệu</td>
								<td class="align-middle small"><%= gh.SoLuong %></td>
								<td class="align-middle small"><%= gh.TongTien %> triệu</td>
								<td class="align-middle text-center"><a href="/giohang/sua/<%= gh.MaDT %>"><i class="bi bi-pencil-square"></i></a></td>
								<td class="align-middle text-center"><a href="/giohang/xoa/<%= gh.MaDT %>" onclick="return confirm('Bạn có muốn xóa sản phẩm <%= gh.TenDT %> không?');"><i class="bi bi-trash text-danger"></i></a></td>
								
							</tr>
						<% }); %>
					</tbody>
				</table>
			</div>
			<div>
				<h2>Thành tiền: <%= hoadon.TongTien %> triệu đồng</h2>
			</div>
		</div>
		<a href="/giohang/mua/<%= session.MaNguoiDung %>" class="btn btn-primary mb-2"><i class="bi bi-plus-lg"></i>Mua</a>
		<!-- Footer -->
		<%- include('includes/footer'); %>
	</div>
	
	<%- include('includes/javascript'); %>
</body>

</html>